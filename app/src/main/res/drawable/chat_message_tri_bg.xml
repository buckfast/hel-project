<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@+id/rightArrow">
    <rotate
        android:fromDegrees="-225"
        android:toDegrees="0"

        android:pivotX="35%"
        android:pivotY="5%" >
        <shape
            android:shape="rectangle" >
            <solid
                android:color="@color/chat_bubble_sent_dark" />
        </shape>

    </rotate>
</item>

    <item android:bottom="@dimen/message_bubble_shadow_tri">
        <rotate
            android:fromDegrees="-225"
            android:toDegrees="0"

            android:pivotX="35%"
            android:pivotY="5%" >
            <shape
                android:shape="rectangle" >
                <solid
                    android:color="@color/chat_bubble_sent" />
            </shape>

        </rotate>
    </item>
</layer-list>