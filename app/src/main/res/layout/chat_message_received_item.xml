<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="wrap_content"
    android:elevation="2dp"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content">

    <View

        android:layout_width="20dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
android:layout_alignTop="@id/clayout"
        android:background="@drawable/chat_message_tri_received_bg"

       />
<android.support.constraint.ConstraintLayout
    android:id="@+id/clayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >



    <TextView

        android:textSize="18sp"


        android:layout_marginEnd="20dp"
        android:id="@+id/chat_message_received"
        android:text="afaefffesfe"
        android:background="@drawable/chat_message_received_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="320dp"
        android:minWidth="120dp"

        android:paddingBottom="14dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="20dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/chat_message_sender"/>

    <TextView

        android:id="@+id/chat_timestamp_received"
        android:text="xxxx"
        android:textColor="@color/colorGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"

        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_message_received"
        app:layout_constraintRight_toRightOf="@+id/chat_message_received" />


    <TextView

        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/chat_message_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginStart="28dp"

        android:textSize="16sp"
        android:text="asda"
        android:textColor="@color/colorGray"
        />
</android.support.constraint.ConstraintLayout>
</RelativeLayout>