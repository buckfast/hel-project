<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="wrap_content"
    android:elevation="2dp"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content">

    <View

        android:layout_width="20dp"
        android:layout_height="39dp"
        android:layout_alignParentRight="true"
android:layout_alignTop="@id/clayout"
        android:background="@drawable/chat_message_tri_bg"

       />
<android.support.constraint.ConstraintLayout
    android:id="@+id/clayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >



    <TextView

        android:textSize="18sp"


        android:layout_marginEnd="20dp"
        android:id="@+id/chat_message"
        android:text=""
        android:background="@drawable/chat_message_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="320dp"
        android:minWidth="100dp"

        android:paddingBottom="14dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:textColor="@android:color/black"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/chat_timestamp"
        android:text=""
        android:textColor="@color/colorGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"

        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_message"
        app:layout_constraintRight_toRightOf="@+id/chat_message" />

</android.support.constraint.ConstraintLayout>
</RelativeLayout>