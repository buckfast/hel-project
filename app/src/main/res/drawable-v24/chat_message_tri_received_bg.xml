<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@+id/leftArrow">
        <rotate
            android:fromDegrees="-225"
            android:toDegrees="0"

            android:pivotX="90%"
            android:pivotY="20%" >
            <shape
                android:shape="rectangle" >
                <solid
                    android:color="#eaeaea" />
            </shape>

        </rotate>
    </item>

    <item android:bottom="@dimen/message_bubble_shadow_tri">
        <rotate
            android:fromDegrees="-225"
            android:toDegrees="0"

            android:pivotX="90%"
            android:pivotY="20%" >
            <shape
                android:shape="rectangle" >
                <solid
                    android:color="#ffffff" />
            </shape>

        </rotate>
    </item>
</layer-list>