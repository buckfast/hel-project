<resources>


    <style name="overflowbutton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_account_circle_black_24dp</item>
        <item name="android:width">36dp</item>
        <item name="android:height">36dp</item>
    </style>


    <style name="superteema" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:icon">@android:color/white</item>
        <item name="actionOverflowButtonStyle">@style/overflowbutton</item>
    </style>

</resources>
